    </div>

    <script>
        // Перемикання між текстовим режимом та режимом файлів
        const toggle = document.getElementById('mode');
        const textMode = document.getElementById('text-mode');
        const fileMode = document.getElementById('file-mode');
        const textField = document.getElementById('text-field');
        const fileTextField = document.getElementById('file-text-field');
        const fileInput1 = document.getElementById('file-input-1');
        const fileInput2 = document.getElementById('file-input-2');

        toggle.addEventListener('change', () => {
          if (toggle.checked) {
            // Перехід у режим файлів
            textMode.classList.add('hidden');
            fileMode.classList.remove('hidden');
            textField.value = ''; // Очистити текстове поле при переході в режим файлів
            fileTextField.value = ''; // Очистити текстове поле для файлів при переході
            fileInput1.value = ''; // Очистити поле для вибору файлів
          } else {
            // Перехід у текстовий режим
            textMode.classList.remove('hidden');
            fileMode.classList.add('hidden');
            fileInput2.value = ''; // Очистити поле для вибору файлів
          }
        });
    </script>
    
</body>
